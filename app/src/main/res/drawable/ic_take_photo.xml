<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list >
            <item >
                <shape android:shape="oval">
                    <stroke android:width="4dip"  android:color="@android:color/holo_green_light"></stroke>
                </shape>
            </item>
            <item android:left="12dip" android:right="12dip" android:top="12dip" android:bottom="12dp">
                <shape  android:shape="oval">
                    <solid android:color="@android:color/holo_green_light"></solid>
                </shape>
            </item>


        </layer-list>
    </item>
<item  >
    <layer-list >
        <item >
            <shape android:shape="oval">
                <stroke android:width="4dip"  android:color="@android:color/holo_green_dark"></stroke>
            </shape>
        </item>
        <item android:left="12dip" android:right="12dip" android:top="12dip" android:bottom="12dp">
            <shape  android:shape="oval">
                <solid android:color="@android:color/holo_green_dark"></solid>
            </shape>
        </item>


    </layer-list>
</item>
</selector>